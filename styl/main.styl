@-webkit-keyframes MOVE-BG {
  0% {
    -webkit-transform: translateX(0%);
  }
  20% {
    opacity 1
  }
  95% {
    opacity 1
  }
  100% {
    opacity 0
    -webkit-transform: translateX(-68%);
  }
}

#content
  width 1080px
  height 1920px
  z-index 1
  margin: auto
  position: relative
  overflow hidden
  .bg
    position: absolute;
    width: 3436px
    left: 0;
    right: 0;
    top: 0;
    bottom: 0;
    background-image: url(../images/bg_slides/1.jpg);
    background-size: 100% 100%, 0% 100%;
    z-index: -1;
    //-webkit-transition-duration: 1s;
    -webkit-animation-name: MOVE-BG;
    -webkit-animation-duration: 10s;
    -webkit-animation-timing-function: linear;
    -webkit-animation-iteration-count: infinite;
    &.slide3
      background-image: url(../images/bg_slides/2.jpg);
      opacity 0
    &.slide4
      background-image: url(../images/bg_slides/3.jpg);
      opacity 0
    &.slide5
      background-image: url(../images/bg_slides/4.jpg);
      opacity 0
    &.slide6
      background-image: url(../images/bg_slides/5.jpg);
      opacity 0
    &.slide7
      background-image: url(../images/bg_slides/6.jpg);
      opacity 0
    &.slide8
      background-image: url(../images/bg_slides/7.jpg);
      opacity 0
    &.slide9
      background-image: url(../images/bg_slides/8.jpg);
      opacity 0

  #index-title
    display: block
    position: absolute
    top: 200px
    color:#fff;
    h3, h2
