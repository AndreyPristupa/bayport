    #active-menu
      color #fff
      font-size: 30px
      position: absolute;
      top: 21px;
      left: 402px;
      ul
        list-style none
        li
          display: inline-block;
          border: 7px solid #aacea0;
          padding: 16px 22px;
          margin-right: 10px;
          opacity: 0;
          transition: 0.5s;
          &:hover
            background-color #fff
            color #004f8c
          &.active
            background-color #fff
            color #004f8c
    &.index-menu
      height: 350px
      transition 1.3s
      background-color: #000
      opacity: .8
      width: 1080px
      &.menu-active
        height: 520px
        top 1500px
        background-color:#004f8c
        opacity: 1
        .index-menu-title
          opacity 0
      & #menu-logo
