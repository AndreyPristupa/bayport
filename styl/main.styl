  .menu-wrapper
    position: absolute
    top: 1300px
    #amenities-menu
      left: 294px
    #site-menu
      left: 312px
    #design-menu
      left 97px
    #design-menu, #amenities-menu, #site-menu
      position: absolute
      z-index -1
      font-size: 20px
      top:0
      transition top 600ms ease
      &.active
